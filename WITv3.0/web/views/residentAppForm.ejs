<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>WTM Resident Application</title>
    <style>
        body {
            font-family: -apple-system, BlinkMacSystemFont, "Segoe UI", Roboto, Helvetica, Arial, sans-serif;
            background-color: #1e293b;
            color: #e2e8f0;
            display: flex;
            justify-content: center;
            align-items: center;
            min-height: 100vh;
            margin: 0;
            padding: 20px;
        }
        .container {
            width: 100%;
            max-width: 800px;
            padding: 2.5rem;
            border-radius: 0.75rem;
            background-color: #334155;
            box-shadow: 0 10px 15px -3px rgba(0, 0, 0, 0.1), 0 4px 6px -2px rgba(0, 0, 0, 0.05);
            border: 1px solid #475569;
        }
        h1 {
            text-align: center;
            color: #f8fafc;
            font-size: 1.875rem;
            font-weight: 600;
            margin-bottom: 2.5rem;
        }
        .welcome-back {
            text-align: center;
            color: #94a3b8;
            font-size: 1.125rem;
            font-weight: 500;
            margin-top: -1.5rem;
            margin-bottom: 2.5rem;
        }
        .form-grid {
            display: grid;
            grid-template-columns: 1fr;
            gap: 1.5rem;
        }
        @media (min-width: 768px) {
            .form-grid {
                grid-template-columns: repeat(2, 1fr);
            }
        }
        .form-group {
            position: relative;
            margin-bottom: 1rem;
        }
        .full-width {
            grid-column: 1 / -1;
        }
        label {
            display: block;
            margin-bottom: 0.5rem;
            font-size: 0.875rem;
            font-weight: 500;
            color: #cbd5e1;
        }
        input[type="text"], input[type="url"], select, textarea {
            width: 100%;
            padding: 0.75rem 1rem;
            border-radius: 0.375rem;
            background-color: #1e293b;
            border: 1px solid #475569;
            color: #e2e8f0;
            font-size: 1rem;
            box-sizing: border-box;
        }
        input:focus, select:focus, textarea:focus {
            outline: none;
            border-color: #38bdf8;
            box-shadow: 0 0 0 2px rgba(56, 189, 248, 0.4);
        }
        textarea {
            min-height: 120px;
            resize: none;
        }
        button, .add-alt-btn {
            padding: 0.75rem 1.5rem;
            border: none;
            border-radius: 0.375rem;
            background-color: #0ea5e9;
            color: #ffffff;
            font-size: 1rem;
            font-weight: 600;
            cursor: pointer;
            transition: background-color 0.2s ease-in-out;
        }
        button:hover, .add-alt-btn:hover { background-color: #38bdf8; }
        .submit-btn {
            width: 100%;
            margin-top: 2.5rem;
        }
        .submit-btn:disabled {
            background-color: #475569;
            cursor: not-allowed;
        }
        .warning-box {
            background-color: rgba(239, 68, 68, 0.1);
            border-left: 4px solid #ef4444;
            color: #f87171;
            padding: 0.75rem 1rem;
            margin-top: 0.5rem;
            border-radius: 0.25rem;
            font-size: 0.875rem;
        }
        .radio-group, .checkbox-container {
            display: flex;
            flex-wrap: wrap;
            gap: 1rem;
            background-color: #1e293b;
            padding: 0.75rem;
            border-radius: 0.375rem;
            border: 1px solid #475569;
        }
        .radio-group label, .checkbox-container label {
            display: flex;
            align-items: center;
            gap: 0.5rem;
            cursor: pointer;
            color: #cbd5e1;
            font-weight: normal;
            margin-bottom: 0;
        }
        .char-counter {
            position: absolute;
            bottom: 8px;
            right: 12px;
            font-size: 0.75rem;
            color: #94a3b8;
        }
        .alt-input-group {
            display: flex;
            gap: 0.5rem;
        }
        .alt-input-group input {
            flex-grow: 1;
        }
        #alts-list-container {
            background-color: #1e293b;
            border: 1px solid #475569;
            border-radius: 0.375rem;
            padding: 0.5rem;
            min-height: 48px;
            display: flex;
            flex-wrap: wrap;
            gap: 0.5rem;
            align-content: flex-start;
        }
        .alt-tag {
            background-color: #4f46e5;
            color: white;
            padding: 0.25rem 0.75rem;
            border-radius: 9999px;
            font-size: 0.875rem;
            display: flex;
            align-items: center;
            cursor: pointer;
        }
        .alt-tag .remove-alt {
            margin-left: 0.5rem;
            font-weight: bold;
        }
        .readonly-input {
             background-color: #334155;
            cursor: not-allowed;
            border-color: #475569;
        }
        .validation-status {
            font-size: 0.8rem;
            font-weight: 500;
            margin-top: 0.5rem;
            min-height: 1.2em; /* Reserve space to prevent layout shifts */
        }
        .validation-status.valid { color: #22c55e; }
        .validation-status.invalid { color: #ef4444; }
        .validation-status.checking { color: #f59e0b; }
    </style>
</head>
<body>
    <div class="container">
        <h1>WTM Resident Application</h1>
        <% if (mainChar) { %>
            <h2 class="welcome-back">Welcome back returning Commander.</h2>
        <% } %>
        <form action="/residentapp/<%= token %>" method="POST" id="resident-form">
            <% if (alts && alts.length > 0) { %>
                <% alts.forEach(alt => { %>
                    <input type="hidden" name="initial_alts" value="<%= alt.character_name %>">
                <% }); %>
            <% } %>

            <div class="form-group">
                <label for="character_name">Character Name</label>
                <input type="text" id="character_name" name="character_name" value="<%= mainChar ? mainChar.character_name : '' %>" required data-validated="false" data-is-valid="false">
                <div class="validation-status" id="main-char-status"></div>
                 <div class="warning-box">
                    <strong>Important:</strong> This must match your main character's name in-game exactly for automatic registration. The name will be validated against ESI.
                </div>
            </div>
            
            <div class="form-grid">
                <div class="form-group">
                    <label for="forum_identity">Enter your Forum Identity</label>
                    <input type="text" id="forum_identity" name="forum_identity" value="<%= forumIdentity ? forumIdentity : '' %>" required>
                </div>
                <div class="form-group">
                    <label for="discord_identity">Your Discord Identity</label>
                    <input type="text" id="discord_identity" name="discord_identity" value="<%= discordTag %>" readonly class="readonly-input">
                </div>
            </div>

            <div class="form-group full-width">
                <label for="alt-input">List any alts you fly with</label>
                <div class="form-grid">
                    <div>
                        <div class="alt-input-group">
                            <input type="text" id="alt-input" placeholder="Enter alt name and click Add">
                            <button type="button" id="add-alt-btn" class="add-alt-btn">Add</button>
                        </div>
                        <div class="validation-status" id="alt-char-status"></div>
                    </div>
                    <div>
                        <div id="alts-list-container">
                        </div>
                        <div id="alts-hidden-inputs">
                        </div>
                    </div>
                </div>
                <div class="warning-box" style="margin-top: 1rem;">
                    <strong>Important:</strong> Each alt name must match the in-game name exactly. Names will be validated.
                </div>
            </div>
            
            <div class="form-group">
                <label for="wtm_time">How long have you flown with WTM?</label>
                <select id="wtm_time" name="wtm_time" required>
                    <option value="<1 Month">&lt;1 Month</option>
                    <option value="1-3 Months">1-3 Months</option>
                    <option value="4-7 Months">4-7 Months</option>
                    <option value="8+ Months">8+ Months</option>
                </select>
            </div>
            
            <div class="form-grid">
                 <div class="form-group">
                    <label>What Logistics Ships can you fly?</label>
                    <div class="checkbox-container" id="logi-ships">
                        <label><input type="checkbox" name="logistics_ships" value="Basilisk"> Basilisk</label>
                        <label><input type="checkbox" name="logistics_ships" value="Scimitar"> Scimitar</label>
                        <label><input type="checkbox" name="logistics_ships" value="Loki"> Loki</label>
                        <label><input type="checkbox" name="logistics_ships" value="None" class="none-option"> None</label>
                    </div>
                </div>

                <div class="form-group">
                    <label>What Battleships can you fly?</label>
                     <div class="checkbox-container" id="bs-ships">
                        <label><input type="checkbox" name="battleship_ships" value="Marauder"> Marauder</label>
                        <label><input type="checkbox" name="battleship_ships" value="Intermediate Battleship"> Intermediate Battleship</label>
                        <label><input type="checkbox" name="battleship_ships" value="None" class="none-option"> None</label>
                    </div>
                </div>
            </div>

            <div class="form-grid">
                <div class="form-group">
                    <label>Do you have T2 guns?</label>
                    <div class="radio-group">
                        <label><input type="radio" name="t2_guns" value="Yes" required> Yes</label>
                        <label><input type="radio" name="t2_guns" value="No"> No</label>
                    </div>
                </div>
                 <div class="form-group">
                    <label>How much time can you dedicate per week?</label>
                    <div class="radio-group">
                        <label><input type="radio" name="command_time_estimate" value="1-3 Hours" required> 1-3 Hours</label>
                        <label><input type="radio" name="command_time_estimate" value="4-7 Hours"> 4-7 Hours</label>
                        <label><input type="radio" name="command_time_estimate" value="8+ Hours"> 8+ Hours</label>
                    </div>
                </div>
            </div>

            <div class="form-group full-width">
                <label for="why_commander">Why do you want to be a commander with WTM?</label>
                <textarea id="why_commander" name="why_commander" rows="6" required maxlength="2000"></textarea>
                <div class="char-counter"></div>
            </div>

            <div class="form-group full-width">
                <label for="why_wtm">Why do you like Flying with WTM?</label>
                <textarea id="why_wtm" name="why_wtm" rows="6" required maxlength="2000"></textarea>
                <div class="char-counter"></div>
            </div>

            <button type="submit" class="submit-btn" id="submit-btn">Submit Application</button>
        </form>
    </div>
    
    <script>
        document.addEventListener('DOMContentLoaded', () => {
            const form = document.getElementById('resident-form');
            const submitBtn = document.getElementById('submit-btn');
            
            const mainCharInput = document.getElementById('character_name');
            const mainCharStatus = document.getElementById('main-char-status');

            const addAltBtn = document.getElementById('add-alt-btn');
            const altInput = document.getElementById('alt-input');
            const altCharStatus = document.getElementById('alt-char-status');
            const altsListContainer = document.getElementById('alts-list-container');
            const hiddenInputsContainer = document.getElementById('alts-hidden-inputs');

            let validationTimeout;

            // --- CORE VALIDATION FUNCTION ---
            async function validateCharacter(charName, inputElement, statusElement) {
                if (!charName || charName.trim().length < 3) {
                    statusElement.textContent = '';
                    inputElement.dataset.isValid = 'false';
                    inputElement.dataset.validated = 'false';
                    checkFormValidity();
                    return { success: false };
                }

                statusElement.textContent = 'Checking...';
                statusElement.className = 'validation-status checking';
                inputElement.dataset.validated = 'false';
                checkFormValidity();

                try {
                    const response = await fetch('/residentapp/validate-char', {
                        method: 'POST',
                        headers: { 'Content-Type': 'application/json' },
                        body: JSON.stringify({ characterName: charName })
                    });
                    const data = await response.json();

                    if (response.ok && data.success) {
                        statusElement.textContent = `✔ Valid: ${data.characterName}`;
                        statusElement.className = 'validation-status valid';
                        inputElement.value = data.characterName;
                        inputElement.dataset.isValid = 'true';
                    } else {
                        statusElement.textContent = `✖ Error: ${data.message || 'Validation failed'}`;
                        statusElement.className = 'validation-status invalid';
                        inputElement.dataset.isValid = 'false';
                    }
                } catch (error) {
                    statusElement.textContent = '✖ Error: Could not reach server.';
                    statusElement.className = 'validation-status invalid';
                    inputElement.dataset.isValid = 'false';
                } finally {
                    inputElement.dataset.validated = 'true';
                    checkFormValidity();
                    return { success: inputElement.dataset.isValid === 'true' };
                }
            }

            // --- FORM SUBMISSION & VALIDITY CHECK ---
            function checkFormValidity() {
                const isMainValid = mainCharInput.dataset.isValid === 'true';
                submitBtn.disabled = !isMainValid;
                submitBtn.textContent = isMainValid ? 'Submit Application' : 'Correct Character Name to Submit';
            }

            form.addEventListener('submit', (e) => {
                checkFormValidity();
                if (submitBtn.disabled) {
                    e.preventDefault();
                    alert('Please ensure your main character name is valid before submitting.');
                }
            });

            // --- MAIN CHARACTER VALIDATION ---
            mainCharInput.addEventListener('input', () => {
                mainCharInput.dataset.validated = 'false';
                mainCharInput.dataset.isValid = 'false';
                mainCharStatus.textContent = 'Validation pending...';
                mainCharStatus.className = 'validation-status checking';
                checkFormValidity();

                clearTimeout(validationTimeout);
                validationTimeout = setTimeout(() => {
                    validateCharacter(mainCharInput.value, mainCharInput, mainCharStatus);
                }, 800);
            });
            
             // Initial validation for pre-filled main character
            if (mainCharInput.value) {
                validateCharacter(mainCharInput.value, mainCharInput, mainCharStatus);
            }


            // --- ALT CHARACTER LOGIC ---
            const addAltTag = (altName) => {
                 if (!altName) return;

                const existingAlts = Array.from(hiddenInputsContainer.querySelectorAll('input')).map(input => input.value.toLowerCase());
                if (existingAlts.includes(altName.toLowerCase())) {
                    altCharStatus.textContent = '✖ Error: This alt has already been added.';
                    altCharStatus.className = 'validation-status invalid';
                    return; 
                }

                const tag = document.createElement('div');
                tag.className = 'alt-tag';
                tag.textContent = altName;
                
                const removeSpan = document.createElement('span');
                removeSpan.className = 'remove-alt';
                removeSpan.innerHTML = '&nbsp;&times;';
                tag.appendChild(removeSpan);

                const hiddenInput = document.createElement('input');
                hiddenInput.type = 'hidden';
                hiddenInput.name = 'alts'; 
                hiddenInput.value = altName;

                tag.addEventListener('click', () => {
                    tag.remove();
                    hiddenInput.remove();
                });

                altsListContainer.appendChild(tag);
                hiddenInputsContainer.appendChild(hiddenInput);
            };

            const handleAddAltClick = async () => {
                const altName = altInput.value.trim();
                if (!altName) return;
                
                addAltBtn.disabled = true;
                const result = await validateCharacter(altName, altInput, altCharStatus);
                addAltBtn.disabled = false;

                if (result.success) {
                    addAltTag(altInput.value); // Use the corrected name
                    altInput.value = '';
                    altCharStatus.textContent = '';
                    altInput.focus();
                }
            };

            addAltBtn.addEventListener('click', handleAddAltClick);
            altInput.addEventListener('keydown', (e) => {
                if (e.key === 'Enter') {
                    e.preventDefault();
                    handleAddAltClick();
                }
            });
            
            // --- INITIAL SETUP ---
            const existingAltsData = <%- JSON.stringify(alts.map(alt => alt.character_name)) %>;
            if (existingAltsData && existingAltsData.length > 0) {
                existingAltsData.forEach(altName => {
                    addAltTag(altName);
                });
            }

            function setupCharCounter(textarea) {
                const counter = textarea.nextElementSibling;
                const maxLength = textarea.maxLength;
                const updateCounter = () => {
                    const remaining = maxLength - textarea.value.length;
                    counter.textContent = `${remaining} characters remaining`;
                };
                textarea.addEventListener('input', updateCounter);
                updateCounter(); 
            }
            
            setupCharCounter(document.getElementById('why_commander'));
            setupCharCounter(document.getElementById('why_wtm'));

            function setupExclusiveCheckboxes(containerId) {
                const container = document.getElementById(containerId);
                if (!container) return;
                const checkboxes = container.querySelectorAll('input[type="checkbox"]');
                const noneCheckbox = container.querySelector('.none-option');
                checkboxes.forEach(cb => {
                    cb.addEventListener('change', () => {
                        if (cb === noneCheckbox && cb.checked) {
                            checkboxes.forEach(otherCb => {
                                if (otherCb !== noneCheckbox) otherCb.checked = false;
                            });
                        } else if (cb.checked) {
                            if (noneCheckbox) noneCheckbox.checked = false;
                        }
                    });
                });
            }
            setupExclusiveCheckboxes('logi-ships');
            setupExclusiveCheckboxes('bs-ships');
            
            checkFormValidity(); // Initial check
        });
    </script>
</body>
</html>

